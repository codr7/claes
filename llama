#!claes

(define server "http://localhost:8080/completion")

(^ send-prompt [value]
  (let [data '{
         stream:            ,F
         n_predict:         300
         temperature:       10
         stop:              ["</s>"]
         repeat_last_n:     256
         repeat_penalty:    1
         top_k:             20
         top_p:             .75
         tfs_z:             1
         typical_p:         1
         presence_penalty:  0
         frequency_penalty: 0
         mirostat:          0
         mirostat_tau:      5
         mirostat_eta:      .1
         grammar:           ""
         n_probs:           0
         prompt:            ,value
       }]
    (parse-js (curl server "application/json" (js data)))))

(^ repl [history]
  (let [p (ask ":) ")]
    (say "in a jiffy...")
    (push history p)
    (say ((send-prompt p) "content"))
    (say)
    (repl history)))

(if ARGV
  (say ((send-prompt (join-strings " " ARGV)) "content"))
  (repl []))

